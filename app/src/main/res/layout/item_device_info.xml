<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box1"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text=""
                android:textColor="@color/txt_mark"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20dp"
                app:autoSizeTextType="uniform" />

            <com.cooler.system.custom.MarqueeTextView
                android:id="@+id/tv_line12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="16dp"
                android:layout_weight="2"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:background="@drawable/rect_box_normal"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="温 度 "
                android:textColor="@color/txt_mark"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="16dp"
                android:layout_weight="2"
                android:background="@drawable/rect_box_normal"
                android:gravity="center"
                android:lines="1"
                android:text="0.0 ℃"
                android:textColor="@color/txt_green"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line31"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="有/无 "
                android:textColor="@color/txt_mark"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line32"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="16dp"
                android:layout_weight="2"
                android:background="@drawable/rect_box_normal"
                android:gravity="center"
                android:lines="1"
                android:text=""
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line41"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="状 态 "
                android:textColor="@color/txt_mark"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line42"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="16dp"
                android:layout_weight="2"
                android:background="@drawable/rect_box_normal"
                android:gravity="center"
                android:lines="1"
                android:text=""
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line51"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="备 注 "
                android:textColor="@color/txt_mark"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="25dp"
                app:autoSizeTextType="uniform" />

            <com.cooler.system.custom.MarqueeTextView
                android:id="@+id/tv_line52"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="16dp"
                android:layout_weight="5"
                android:background="@drawable/rect_box_normal"
                android:ellipsize="marquee"
                android:gravity="center"
                android:text="我是备注我是备注我是备注我是备注我是备注我是备注我是备注我是备注我是备注我是备注我是备注我是备注daa"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="22dp"
                app:autoSizeTextType="uniform"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>