<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/box1"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="A001"
            android:lines="1"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:textColor="@color/txt_mark"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="35dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:text=""
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="35dp"
            android:layout_weight="2"
            android:lines="1"
            android:layout_marginRight="16dp"
            android:layout_marginVertical="12dp"
            android:textColor="@color/white"
            android:background="@drawable/rect_box_normal"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:text="温度"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="35dp"
            app:autoSizeTextType="uniform"
            android:lines="1"
            android:gravity="center"
            android:textColor="@color/txt_mark"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0.0 ℃"
            android:paddingHorizontal="12dp"
            android:layout_weight="2"
            android:lines="1"
            android:layout_marginRight="16dp"
            android:layout_marginVertical="12dp"
            android:textColor="@color/txt_green"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="35dp"
            android:background="@drawable/rect_box_normal"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line31"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:text="有/无"
            android:textStyle="bold"
            android:lines="1"
            android:gravity="center"
            android:textColor="@color/txt_mark"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="35dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:text=""
            android:layout_weight="2"
            android:lines="1"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="35dp"
            android:layout_marginRight="16dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/rect_box_normal"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line41"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="状态"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp"
            android:lines="1"
            android:gravity="center"
            android:textColor="@color/txt_mark"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="35dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_line42"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:text=""
            android:layout_weight="2"
            android:lines="1"
            android:layout_marginRight="16dp"
            android:layout_marginVertical="12dp"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="35dp"
            app:autoSizeTextType="uniform"
            android:background="@drawable/rect_box_normal"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>