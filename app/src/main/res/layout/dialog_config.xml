<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_active_bg"
    android:paddingHorizontal="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="软件配置信息"
        android:textColor="@color/black_333333"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingVertical="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地 址: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:lines="1"/>

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="3"
            android:background="@drawable/selector_et"
            android:hint="0.0.0.0"
            android:text="https://console-mock.apipost.cn/app/mock/project/7c32e56c-6972-4c15-c276-c6339f27bc7f/"
            android:lines="1"
            android:nextFocusDown="@id/et_port"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14" />

        <EditText
            android:id="@+id/et_port"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="端口号"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:background="@drawable/selector_et"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:nextFocusDown="@id/et_per_time"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="间隔时间(s): "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:lines="1"/>
        <EditText
            android:id="@+id/et_per_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="秒"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:layout_marginStart="15dp"
            android:inputType="number"
            android:paddingVertical="5dp"
            android:background="@drawable/selector_et"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_device_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备编号: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:lines="1"/>
        <EditText
            android:id="@+id/et_device_code1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint=""
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:background="@drawable/selector_et"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
        <EditText
            android:id="@+id/et_device_code2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint=""
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:background="@drawable/selector_et"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
        <EditText
            android:id="@+id/et_device_code3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint=""
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:background="@drawable/selector_et"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预警阀值: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:lines="1"/>
        <EditText
            android:id="@+id/et_warning_temp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint=""
            android:lines="1"
            android:maxLength="8"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:background="@drawable/selector_et"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_btn"
            android:focusable="true"
            android:nextFocusLeft="@id/tv_cancel"
            android:nextFocusDown="@id/tv_cancel"
            android:paddingHorizontal="35dp"
            android:paddingVertical="10dp"
            android:text="确定"
            android:textColor="@color/blue_4571E7"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_btn"
            android:focusable="true"
            android:paddingHorizontal="35dp"
            android:paddingVertical="10dp"
            android:text="取消"
            android:textColor="@color/gray_7E828A"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>