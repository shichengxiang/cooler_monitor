<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_active_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="软件配置信息"
        android:textColor="@color/black_333333"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingVertical="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地 址: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:lines="1"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/et_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.0.0.0"
            android:layout_marginStart="15dp"
            android:nextFocusDown="@id/et_port"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端 口 号: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:lines="1"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/et_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="端口号"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:nextFocusDown="@id/et_per_time"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_device_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="间隔时间(s): "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:lines="1"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/et_per_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="秒"
            android:layout_marginStart="15dp"
            android:inputType="number"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts14"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_btn"
            android:focusable="true"
            android:nextFocusLeft="@id/tv_cancel"
            android:nextFocusDown="@id/tv_cancel"
            android:paddingHorizontal="35dp"
            android:paddingVertical="10dp"
            android:text="确定"
            android:textColor="@color/blue_4571E7"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_btn"
            android:focusable="true"
            android:paddingHorizontal="35dp"
            android:paddingVertical="10dp"
            android:text="取消"
            android:textColor="@color/gray_7E828A"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>